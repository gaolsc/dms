<% content_for :head do %>
  <%= javascript_include_tag "admin/#{params[:controller]}_new" %>
  <%= stylesheet_link_tag "admin/#{params[:controller]}_new" %>
<% end %>

<% content_for :nav_links do %>
  <li class="active"><a href="/admin/menu_items/new">菜品添加</a></li>
  <li><a href="#">菜品管理</a></li>
<% end %>

<div class="container">
  <%= form_tag('/admin/menu_items', method: 'post', id: 'i-menu-item-new-form') do %>
    <div class="form-group">
      <label for="i-menu-label">菜品名称<span class="f-mark-required">*</span></label>
      <input type="text" class="form-control" id="i-menu-label">
    </div>
    <div class="form-group">
      <label for="i-item-price">菜品价格<span class="f-mark-required">*</span></label>
      <input type="text" class="form-control" id="i-item-price">
    </div>
    <div class="form-group">
      <label for="i-item-preview">菜品预览<span class="f-mark-required">*</span></label>
      <input type="file" class="form-control" id="i-item-preview">
    </div>
    <div class="form-group">
      <button type="button" class="btn btn-success" id="i-btn-new-menu-item">上架</button>
    </div>
  <% end %>
</div>