<% content_for :head do %>
    <%= javascript_include_tag "admin/#{params[:controller]}_man" %>
    <%= stylesheet_link_tag "admin/#{params[:controller]}_man" %>
<% end %>

<% content_for :nav_links do %>
    <li class="active"><a href="#">全部菜品</a></li>
    <li><a href="#about">已完成订单</a></li>
    <li><a href="#contact">废弃订单</a></li>
<% end %>

<div class="container">
  <table class="table table-striped">
    <thead>
    <tr>
      <th>菜品名</th>
      <th>价格</th>
      <th colspan="2" class="o-op-col">#</th>
    </tr>
    </thead>
    <tbody id="i-all-orders">
    <% @menu_items.each do |item| %>
        <tr>
          <td><%= item.label %></td>
          <td><%= item.price %></td>
          <td><a href="javascript:void(0)" class="o-action-link"><%= action_label(item) %></a></td>
          <td class="o-op-col"><input type="hidden" value="<%= item.id %>"></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>